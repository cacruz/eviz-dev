from eviz.lib.autoviz.input_config import InputConfig
from eviz.lib.autoviz.app_data import AppData

# Example AppData instance
app_data = AppData(
    inputs=[
        {"name": "file1.nc", "location": "/data/files", "source": "source1"},
        {"name": "file2.csv", "location": "/data/files", "source": "source2"},
    ]
)

# Initialize InputConfig with AppData
input_config = InputConfig(source_names=["source1", "source2"], config_files=["config.yaml"], app_data=app_data)
input_config.initialize()

# Print the readers
print("Readers:", input_config.readers)

Readers: {
    'source1': <NetCDFDataReader instance>,
    'source2': <CSVDataReader instance>
}



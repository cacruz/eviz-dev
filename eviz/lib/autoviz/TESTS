system_config APP

from eviz.lib.autoviz.app_data import AppData
from eviz.lib.autoviz.system_config import SystemConfig

# Example AppData with system_opts
app_data = AppData(
    system_opts={
        'use_mp_pool': True,
        'archive_web_results': True,
        'collection': 'example_collection',
    }
)

# Initialize SystemConfig with AppData
system_config = SystemConfig(app_data=app_data)
system_config.initialize()

# Print the initialized values
print(f"use_mp_pool: {system_config.use_mp_pool}")
print(f"archive_web_results: {system_config.archive_web_results}")
print(f"collection: {system_config.collection}")
print(f"event_stamp: {system_config.event_stamp}")

{
    'use_mp_pool': True,
    'archive_web_results': True,
    'collection': 'example_collection',
}

use_mp_pool: True
archive_web_results: True
collection: example_collection
event_stamp: 20250321-153045  # (example timestamp)



